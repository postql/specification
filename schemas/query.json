{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://postql.org/schemas/v1/query.json",
  "description": "A PostQL query set",
  "allOf": [
    {
      "$ref": "https://postql.org/schemas/v1/document.json"
    },
    {
      "properties": {
        "schema": {
          "const": "https://postql.org/schemas/v1/query.json"
        },
        "data": {
          "properties": {
            "options": {
              "description": "Options that apply to all queries",
              "type": "object",
              "properties": {
                "transactional": {
                  "description": "Whether all queries must be successful for any to be executed",
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            },
            "queries": {
              "type": "array",
              "items": {
                "description": "A PostQL parameterized query",
                "type": "object",
                "properties": {
                  "query": {
                    "description": "A PostQL query string",
                    "type": "string"
                  },
                  "params": {
                    "description": "Values for the parameter placeholders in the query",
                    "type": "object",
                    "patternProperties": {
                      "^[A-Za-z][A-Za-z_]*(?<!_)$": {}
                    },
                    "additionalProperties": false
                  }
                },
                "required": [
                  "query"
                ],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": [
            "queries"
          ]
        }
      }
    }
  ]
}
