{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://postql.org/schemas/v1/reply.json",
  "description": "A reply to a PostQL query",
  "allOf": [
    {
      "$ref": "https://postql.org/schemas/v1/document.json"
    },
    {
      "properties": {
        "schema": {
          "const": "https://postql.org/schemas/v1/reply.json"
        },
        "data": {
          "properties": {
            "results": {
              "description": "An array containing result documents for each query in the request",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "aliases": {
                    "description": "A map of aliases from the original query",
                    "type": "object",
                    "patternProperties": {
                      "^[a-z][a-z_]*(?<!_)$": {
                        "description": "The full identifier of the queried model",
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "anyOf": [
                  {
                    "description": "A successful query result",
                    "properties": {
                      "outcome": {
                        "const": "success"
                      },
                      "rows": {
                        "$ref": "https://postql.org/schemas/v1/rows.json"
                      }
                    },
                    "required": [
                      "outcome",
                      "rows"
                    ]
                  },
                  {
                    "description": "A failed query result",
                    "properties": {
                      "outcome": {
                        "const": "failure"
                      },
                      "error": {
                        "$ref": "https://postql.org/schemas/v1/error.json"
                      }
                    },
                    "required": [
                      "outcome",
                      "error"
                    ]
                  }
                ],
                "required": [
                  "aliases"
                ],
                "additionalProperties": false
              }
            },
            "query": {
              "$ref": "https://postql.org/schemas/v1/query.json"
            }
          },
          "required": [
            "results"
          ]
        }
      }
    }
  ]
}
