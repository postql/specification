{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://postql.org/schemas/v1/rows.json",
  "description": "The resultant rows of a successful PostQL query",
  "allOf": [
    {
      "$ref": "https://postql.org/schemas/v1/document.json"
    },
    {
      "properties": {
        "schema": {
          "const": "https://postql.org/schemas/v1/rows.json"
        },
        "data": {
          "type": "array",
          "items": {
            "description": "An object keyed by the aliases of the query, whose values are maps of selected expressions to their values",
            "type": "object",
            "patternProperties": {
              "^[a-z][a-z_]*(?<!_)$": {
                "type": "object",
                "patternProperties": {
                  "^[a-z][a-z_]*(?<!_)$": {}
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        }
      }
    }
  ]
}
