{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://postql.org/schemas/v1/response.json",
  "description": "The body of a PostQL request response",
  "allOf": [
    {
      "$ref": "https://postql.org/schemas/v1/document.json"
    },
    {
      "properties": {
        "schema": {
          "const": "https://postql.org/schemas/v1/response.json"
        },
        "data": {
          "properties": {
            "meta": {
              "$ref": "https://postql.org/schemas/v1/meta.json"
            },
            "reply": {
              "$ref": "https://postql.org/schemas/v1/reply.json"
            }
          },
          "required": [
            "meta",
            "reply"
          ]
        }
      }
    }
  ]
}
